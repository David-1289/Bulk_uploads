<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>upload</title>
    <style>
        *{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}
.header{
    width: 100%;
    height: 100vh;
    background-image: linear-gradient(rgba(5,0,136,0.5),rgba(5,0,136,0.5)),url("");
    background-position: center;
    background-size: cover;
    overflow-x: hidden;
}

form{
    border: 1px solid #e6e6e6;
    border-radius: 12px;
    padding: 20px;
    background: transparent;
    flex:  1 1 1;
    display: flex;
    flex-direction: column;
    width: 50%;
    margin: auto;
    margin-top: 80px;
    padding: 40px;
}
form span {
    margin-bottom: 20px;
}

form input{
    border: 1px solid #212121;
    border-radius: 6px;
    color: #212121;
    font-size: 15px;
    min-height: 44px;
    padding: 0 20px;
    transition: border-color 0.2s ease;
    width: 100%;
    margin-bottom: 30px;
}

.button {
    background: #212121;
    border: 1px solid;
    border-color: #212121;
    border-radius: 6px;
    color: #fff;
    cursor: pointer;
    font-size: 22px;
    height: 48px;
    line-height: 1;
    padding: 15px 28px;
    justify-content: center;
    text-align: center;
  }
    </style>
</head>
<body>
    <section class="header">
        <form id="form">
            <span>Upload Image Folder : </span>
            <input type="file" id="imagefolder" webkitdirectory directory multiple required/>
            <span>Upload file : </span>
            <input type="file"  id='datafolder'  >
            <button class="button">Submit</button>
        </form>
    </section>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.4/axios.min.js" integrity="sha512-LUKzDoJKOLqnxGWWIBM4lzRBlxcva2ZTztO8bTcWPmDSpkErWx0bSP4pdsjNH8kiHAUPaT06UXcb+vOEZH+HpQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.4/axios.js" integrity="sha512-A/D/17S8jG62ka9f3jPwMs+bKGJ1f/xQts7bAUjTIKQf0anTGjlpuEz3q9q++3qRAVYKS3iVx6KzM8GPtIaYfw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script> -->
<script>

        const form=document.getElementById('form')
        form.addEventListener('submit', (e)=>{
            e.preventDefault()
            const images=document.getElementById('imagefolder').files;
            const data=document.getElementById('datafolder').files[0];
           const formdata=new FormData()
           formdata.append('files',data)
           for(let i=0;i<images.length;i++){
            formdata.append('files',images[i])
           } 
           fetch("http://localhost:500",{
            method:"POST",
            body:formdata
           }).then(res=>res.json()).then(data=>console.log(data))
        })
        
    </script>
</body>
</html>